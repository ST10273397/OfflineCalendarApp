<?xml version="1.0" encoding="utf-8"?>
<!--
  share invites layout
  shows the calendars shared to the current user and a leave button for each
-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- SEGMENT list - recycler view -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvInvites"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:clipToPadding="false" />

    <!-- SEGMENT states - progress and empty -->
    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="no shared calendars"
        android:layout_gravity="center"
        android:visibility="gone" />
</FrameLayout>
