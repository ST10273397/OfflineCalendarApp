<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/pad_screen">

        <!-- Header / summary -->
        <TextView
            android:id="@+id/tvCalTitle"
            style="@style/Text.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/calendar_title" />

        <TextView
            android:id="@+id/tvCalDesc"
            style="@style/Text.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_2"
            android:textColor="?attr/colorOnSurface"
            android:text="@string/calendar_description" />

        <!-- Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddEvent"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/event_add"
                app:cornerRadius="@dimen/radius_m"
                app:backgroundTint="?attr/colorPrimary"
                android:textColor="?attr/colorOnPrimary" />

            <Space
                android:layout_width="@dimen/space_2"
                android:layout_height="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditCal"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/action_edit"
                app:cornerRadius="@dimen/radius_m"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp"
                app:backgroundTint="?attr/colorSurface"
                android:textColor="?attr/colorOnSurface" />

            <Space
                android:layout_width="@dimen/space_2"
                android:layout_height="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteCal"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/action_delete"
                app:cornerRadius="@dimen/radius_m"
                app:backgroundTint="?attr/colorError"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Events list card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="?attr/colorSurface"
            app:shapeAppearanceOverlay="@style/Shape.Rounded.Medium"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp"
            app:cardElevation="@dimen/elev_2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/pad_card">

                <TextView
                    android:id="@+id/tvEventsHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/events_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="?attr/colorOnSurface" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvEvents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_3" />

                <TextView
                    android:id="@+id/tvEmpty"
                    style="@style/Text.Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_3"
                    android:gravity="center"
                    android:text="@string/event_none"
                    android:visibility="gone" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
