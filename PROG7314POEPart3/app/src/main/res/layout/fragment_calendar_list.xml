<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootCalendarList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    android:padding="@dimen/pad_screen">

    <!-- Title -->
    <TextView
        android:id="@+id/tvHeader"
        style="@style/Text.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nav_mine"
        android:paddingBottom="@dimen/space_3" />

    <!-- Search + Add -->
    <LinearLayout
        android:id="@+id/searchRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/calendars_search_hint"
            android:padding="@dimen/pad_field"
            android:backgroundTint="@color/outline" />

        <Space
            android:layout_width="@dimen/space_2"
            android:layout_height="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddCalendar"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/touch_target"
            app:icon="@android:drawable/ic_input_add"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/space_1"
            app:cornerRadius="@dimen/radius_m"
            app:backgroundTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary"
            android:paddingLeft="@dimen/space_3"
            android:paddingRight="@dimen/space_3" />
    </LinearLayout>

    <!-- Empty state -->
    <TextView
        android:id="@+id/tvEmptyState"
        style="@style/Text.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calendar_none"
        android:gravity="center"
        android:layout_marginTop="@dimen/space_6"
        android:visibility="gone" />

    <!-- Calendars list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCalendars"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/space_4"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/space_8" />
</LinearLayout>
