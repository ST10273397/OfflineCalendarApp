<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/pad_screen">

        <!-- Header -->
        <TextView
            android:id="@+id/tvHeader"
            style="@style/Text.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/event_create"
            android:paddingBottom="@dimen/space_4" />

        <!-- Calendar picker -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Prog.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nav_calendar"
            app:boxBackgroundMode="outline">

            <Spinner
                android:id="@+id/spn_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <Space android:layout_width="1dp" android:layout_height="@dimen/space_3"/>

        <!-- Title -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Prog.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/event_title"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_EventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences" />
        </com.google.android.material.textfield.TextInputLayout>

        <Space android:layout_width="1dp" android:layout_height="@dimen/space_3"/>

        <!-- Date -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Prog.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/event_date"
            app:boxBackgroundMode="outline"
            app:endIconMode="custom">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <Space android:layout_width="1dp" android:layout_height="@dimen/space_3"/>

        <!-- Start / End time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Prog.TextInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/event_start_time"
                app:boxBackgroundMode="outline"
                app:endIconMode="custom">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_StartTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <Space android:layout_width="@dimen/space_2" android:layout_height="1dp"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Prog.TextInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/event_end_time"
                app:boxBackgroundMode="outline"
                app:endIconMode="custom">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_EndTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <Space android:layout_width="1dp" android:layout_height="@dimen/space_3"/>

        <!-- Description -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Prog.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/event_description"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_Desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="3"
                android:inputType="textMultiLine" />
        </com.google.android.material.textfield.TextInputLayout>

        <Space android:layout_width="1dp" android:layout_height="@dimen/space_3"/>

        <!-- Repeats -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Prog.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/event_repeats"
            app:boxBackgroundMode="outline">

            <Spinner
                android:id="@+id/spn_Repeats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <Space android:layout_width="1dp" android:layout_height="@dimen/space_6"/>

        <!-- Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_Create"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="@dimen/touch_target"
                app:cornerRadius="@dimen/radius_m"
                app:backgroundTint="?attr/colorPrimary"
                android:textColor="?attr/colorOnPrimary"
                android:text="@string/action_create" />

            <Space android:layout_width="@dimen/space_2" android:layout_height="1dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_Reset"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="@dimen/touch_target"
                app:cornerRadius="@dimen/radius_m"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp"
                app:backgroundTint="?attr/colorSurface"
                android:textColor="?attr/colorOnSurface"
                android:text="@string/action_reset" />

            <Space android:layout_width="@dimen/space_2" android:layout_height="1dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_Cancel"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="@dimen/touch_target"
                app:cornerRadius="@dimen/radius_m"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp"
                app:backgroundTint="?attr/colorSurface"
                android:textColor="?attr/colorOnSurface"
                android:text="@string/action_cancel" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
